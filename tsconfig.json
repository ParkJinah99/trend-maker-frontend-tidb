{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",  // Changed from 'bundler' to 'node' for standard React projects
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",  // Changed from 'preserve' to 'react' to support direct JSX compilation
    "incremental": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "src/app/layout.jsx"
  ],
  "exclude": ["node_modules"]
}
